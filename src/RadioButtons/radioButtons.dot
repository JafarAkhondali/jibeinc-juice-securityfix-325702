<div class='ui-radio-buttons'>
  {{~it.options :opt:index}}
  <div class="select-option">
    <label>
      <input {{? it.radioBoxes }}type='checkbox'{{??}}type='radio'{{?}} name='{{= it.id }}' value='{{= opt.value }}' {{? opt.checked }}checked=true{{?}}/>
      <span>{{=it.renderItem(opt)}}</span>
    </label>
  </div>
  {{~}}
</div>
